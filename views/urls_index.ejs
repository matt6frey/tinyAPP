<!DOCTYPE html>
<html>
  <% include partials/_head.ejs %>

  <body>
  <!-- include header -->
  <div class="container p-3">
    <% include partials/_header.ejs %>
    <h3 class="text-center">Links</h3>
    <% if (user_id !== undefined) { %>
    <ol style="margin:50px auto; width: 410px;">
      <% Object.keys(urls).forEach( (key) => { %>
        <li><span class="d-inline-block"><%= urls[key].shortURL %> &rarr; <%= urls[key].longURL %></span>
          <form method="GET" action="/urls/<%= urls[key].shortURL %>/delete" class="delete m-0">
          <a href="/urls/<%= urls[key].shortURL %>" class="btn btn-primary d-inline-block">Edit</a>
          <input type="submit" value="Delete" class="btn btn-primary d-inline-block">
        </form>
        </li>
      <% }) %>
    </ol>

    <p class="text-center"><a href="/urls/new" class="btn btn-primary">Add New</a></p>

    <% } else { %>

    <p class="text-center" style="margin-top: 50px;"><strong>You must be logged in to view the list of links.</strong></p>
    <% } %>

  </div>
  </body>
</html>